filters:
  classes:                      # alias → fully-qualified class names (FQNs)
    AccountSummary: com.yourapp.casa.dto.AccountSummary
    AccountBalances: com.yourapp.casa.dto.AccountBalances
    ChildAccount: com.yourapp.casa.dto.ChildAccount
    SchemeCodeDescription: com.yourapp.casa.dto.SchemeCodeDescription
    ErrorItem: com.yourapp.casa.dto.ErrorItem

  channels:                     # channel name → (class alias → allowed properties)
    default:
      AccountSummary: [ sourceAccountNumber, accountCurrency, accountStatus, accountBalances, childAccounts ]
      AccountBalances: [ availableBalance ]
      ChildAccount: [ sourceAccountNumber ]
      SchemeCodeDescription: [ schemeCodeDescription, descriptionCategory ]
      ErrorItem: [ timestamp, xCorrelationId, errorCode, errorDescription ]

    MobileApp:
      AccountSummary: [ sourceAccountNumber, accountCurrency, accountStatus, accountBalances ]
      AccountBalances: [ availableBalance ]
      ErrorItem: [ timestamp, xCorrelationId, errorCode, errorDescription ]

    InternetBanking:
      AccountSummary: [ sourceAccountNumber, accountName, accountType, accountBalances, childAccounts ]
      AccountBalances: [ accountBalance ]
      ChildAccount: [ sourceAccountNumber ]
      ErrorItem: [ timestamp, xCorrelationId, errorCode, errorDescription ]

    PartnerAPI:
      AccountSummary: [ sourceAccountNumber, schemeCode, schemeCodeDescription ]
      SchemeCodeDescription: [ schemeCodeDescription, descriptionCategory ]
      ErrorItem: [ timestamp, xCorrelationId, errorCode ]


spring:
  config:
    import: "classpath:field-filters.yml"


package com.example.casa.filters.config;

import lombok.Data;
import org.springframework.boot.context.properties.ConfigurationProperties;

import java.util.List;
import java.util.Map;

@Data
@ConfigurationProperties(prefix = "filters")
public class FilterRulesProperties {
    /** alias → fully-qualified class name */
    private Map<String, String> classes;

    /** channel → (classAlias → allowed property names) */
    private Map<String, Map<String, List<String>>> channels;
}
