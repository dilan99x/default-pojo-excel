private List<String> validateRoutingHeaders(HttpServletRequest request) {
    List<String> missingCustomHeaderDescriptions = new LinkedList<>();

    if (!CollectionUtils.isEmpty(routingHeaderConfig.getRoutingHeaders())) {
        // Use StringJoiner for cleaner separator handling
        StringJoiner headerJoiner = new StringJoiner(", ");

        for (String header : routingHeaderConfig.getRoutingHeaders()) {
            String value = request.getHeader(header);

            // Collect all headers into one line
            headerJoiner.add(header + "=" + value);

            // Validation logic remains the same
            if (routingHeaderConfig.isRoutingHeaderValidationEnabled()) {
                if (value == null || value.trim().isEmpty()) {
                    missingCustomHeaderDescriptions.add(
                        "MISSING_MANDATORY_ROUTING_HEADER_" + header.toUpperCase()
                    );
                }
            }
        }

        // Log once for all headers
        LoggerUtil.info(log, APP_EVENT, ROUTING_HEADER, "HEADERS", headerJoiner.toString());
    }

    return missingCustomHeaderDescriptions;
}
